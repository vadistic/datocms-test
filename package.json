{
  "name": "gatsby-datocms-demo",
  "description": "Gatsby DatoCMS creative portfolio demo",
  "version": "1.0.0",
  "author": "Stefano Verna <s.verna@datocms.com>",
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "main": "n/a",
  "scripts": {
    "build": "gatsby build",
    "dev": "gatsby develop",
    "format": "prettier --write -l --no-color './{src,types}/**/*.{js,ts,tsx}'",
    "lint": "tslint -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "env": "node ./scripts/env-config",
    "apollo:check": "apollo service:check --endpoint http://localhost:8000/___graphql",
    "apollo:push": "apollo service:push --endpoint http://localhost:8000/___graphql",
    "apollo:schema": "apollo service:download --endpoint 'http://localhost:8000/___graphql' src/generated/schema.json",
    "apollo:codegen": "apollo client:codegen ./src/generated/graphql.ts --outputFlat --target typescript"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && yarn lint && yarn typecheck"
    }
  },
  "dependencies": {
    "babel-plugin-styled-components": "^1.10.0",
    "dotenv": "^6.2.0",
    "gatsby": "^2.0.110",
    "gatsby-image": "^2.0.29",
    "gatsby-plugin-react-helmet": "^3.0.6",
    "gatsby-plugin-styled-components": "^3.0.5",
    "gatsby-plugin-typescript": "^2.0.6",
    "gatsby-source-datocms": "^2.0.1",
    "gatsby-source-filesystem": "^2.0.20",
    "gatsby-transformer-remark": "^2.2.3",
    "grommet": "^2.3.1",
    "grommet-icons": "^4.1.0",
    "react": "^16.8.0-alpha.1",
    "react-dom": "^16.8.0-alpha.1",
    "react-helmet": "^5.2.0",
    "react-photo-gallery": "^6.3.1",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@types/gatsby": "vadistic/types#types-gatsby-v2.0.91-2-gitpkg",
    "@types/grommet-icons": "vadistic/types#types-grommet-icons-v4.1.0-2-gitpkg",
    "@types/react": "^16.7.22",
    "@types/react-dom": "^16.0.11",
    "@types/react-photo-gallery": "vadistic/types#types-react-photo-gallery-v6.3.0-0-gitpkg",
    "@types/styled-components": "^4.1.6",
    "husky": "^1.3.1",
    "prettier": "^1.16.3",
    "pretty-quick": "^1.10.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "types-util": "vadistic/types#types-util-v0.1.2-gitpkg",
    "types-yarn": "vadistic/types#types-yarn-v0.2.0-gitpkg",
    "typescript": "^3.3.1"
  },
  "resolutions": {
    "graphql": "0.13.2"
  }
}
