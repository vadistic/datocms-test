{
  "name": "gatsby-datocms-demo",
  "description": "Gatsby DatoCMS creative portfolio demo",
  "version": "1.0.0",
  "author": "Stefano Verna <s.verna@datocms.com>",
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "main": "n/a",
  "scripts": {
    "build": "gatsby build",
    "dev": "gatsby develop",
    "format": "prettier --write -l --no-color './{src,types}/**/*.{js,ts,tsx}'",
    "lint": "tslint -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "codegen:schema": "apollo schema:download --endpoint 'http://localhost:8000/___graphql' src/generated/schema.json",
    "codegen:generate": "apollo codegen:generate --outputFlat --target='typescript' --tagName='graphql' --queries='./src/**/*.{ts,tsx}' --schema='./src/generated/schema.json' './src/generated/graphql.ts'",
    "codegen": "yarn codegen:schema && yarn codegen:generate"
  },
  "dependencies": {
    "babel-plugin-styled-components": "^1.10.0",
    "dotenv": "^6.2.0",
    "gatsby": "^2.0.91",
    "gatsby-image": "^2.0.26",
    "gatsby-plugin-react-helmet": "^3.0.5",
    "gatsby-plugin-styled-components": "^3.0.4",
    "gatsby-plugin-typescript": "^2.0.3",
    "gatsby-source-datocms": "^2.0.1",
    "gatsby-source-filesystem": "^2.0.16",
    "gatsby-transformer-remark": "^2.2.0",
    "grommet": "^2.3.1",
    "grommet-icons": "^4.1.0",
    "react": "^16.8.0-alpha.1",
    "react-dom": "^16.8.0-alpha.1",
    "react-helmet": "^5.2.0",
    "react-photo-gallery": "^6.3.0",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@types/gatsby": "vadistic/types#types-gatsby-v2.0.91-2-gitpkg",
    "@types/grommet-icons": "vadistic/types#types-grommet-icons-v4.1.0-2-gitpkg",
    "@types/react": "^16.7.20",
    "@types/react-dom": "^16.0.11",
    "@types/react-photo-gallery": "vadistic/types#types-react-photo-gallery-v6.3.0-0-gitpkg",
    "@types/styled-components": "^4.1.6",
    "apollo": "1.9.2",
    "husky": "^1.3.1",
    "prettier": "^1.16.0",
    "pretty-quick": "^1.10.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "types-util": "vadistic/types#types-util-v0.1.2-gitpkg",
    "types-yarn": "vadistic/types#types-yarn-v0.2.0-gitpkg",
    "typescript": "^3.2.4"
  },
  "resolutions": {
    "graphql": "0.13.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && yarn lint && yarn typecheck"
    }
  }
}
